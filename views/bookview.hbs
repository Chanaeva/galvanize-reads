<ul>
 <div class="container">
  <div class="row">
   <div class="col l12 m8">
    <div class="card horizontal">
     <div class="card-image">
       <img src="{{this.cover_url}}">
       </div>
      <div class="card-stacked">
       <div class="card-content">
         <h4>{{this.title}}</h4>
         <h5>{{this.first_name}}</h5>
         <h6>{{this.genre}}</h6>
         <p>{{this.description}}</p>
       </div>
       <div class="card-action">
          <form action="/delete/{{id}}?_method=delete" method="post">
              <button class=" lime darken-3 waves-effect waves-light btn left" type="submit">Delete</button>
              </form>
              <div class="row">
              <div class="col s4">
             <a href="/editbook/{{this.id}}"><button class="lime darken-3 waves-effect waves-light btn" type="submit">Edit</button></a>
          </form>
        </div>
       </div>
      </div>
    </div>
   </div>
  </div>
 </ul>
